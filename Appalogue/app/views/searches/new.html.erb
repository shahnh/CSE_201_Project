<h1 style="font-size: 40px; margin: 0px">Advanced Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>


	 <div class="field">
    <%= s.label :description %><br>
    <%= s.text_area :description %>
  </div> 

  <div class="field">
    <%= s.label :orgname %>
    <%= s.text_field :orgname %>
  </div>
 
	<div class="field">
    <%= s.label :price %><br>
    <%= s.text_field :price %>
  </div>

	<div class="field">
    <%= s.label :platform %><br>
    <%= s.text_field :platform %>
  </div>
  


   <div class="field">
    <%= s.label :version %>
    <%= s.text_field :version %>
  </div>

  <br>
	<div class="actions"><%= s.submit "Search", class: "infoButton"%></div>

<% end%>

